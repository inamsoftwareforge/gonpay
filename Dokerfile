FROM php:8.2-apache

# Enable Apache rewrite module
RUN a2enmod rewrite

# Set working directory
WORKDIR /var/www/html

# Copy all files to the container
COPY . /var/www/html/

# Make sure Apache uses index.php as default
RUN echo "<IfModule dir_module>\nDirectoryIndex index.php\n</IfModule>" >> /etc/apache2/apache2.conf

# Optional: Set correct permissions
RUN chown -R www-data:www-data /var/www/html

# Expose default port
EXPOSE 80
